<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="521.0" prefWidth="393.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.CrearEditarUsuario"
            stylesheets="stylesformulario.css"
            styleClass="form-root">

   <children>

      <!-- DNI -->
      <Label text="DNI:" layoutX="71" layoutY="57"
             styleClass="form-label" />
      <TextField fx:id="txtusuariodni" layoutX="169" layoutY="58"
                 prefWidth="189" prefHeight="26"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce un DNI válido." />
         </tooltip>
      </TextField>

      <!-- Nombre -->
      <Label text="Nombre:" layoutX="71" layoutY="104"
             styleClass="form-label" />
      <TextField fx:id="txtusuarionombre" layoutX="169" layoutY="105"
                 prefWidth="189" prefHeight="26"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce el nombre del usuario." />
         </tooltip>
      </TextField>

      <!-- Apellidos -->
      <Label text="Apellidos:" layoutX="71" layoutY="156"
             styleClass="form-label" />
      <TextField fx:id="txtusuarioapellidos" layoutX="169" layoutY="157"
                 prefWidth="189" prefHeight="26"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce los apellidos del usuario." />
         </tooltip>
      </TextField>

      <!-- Sexo -->
      <Label text="Sexo:" layoutX="71" layoutY="209"
             styleClass="form-label" />
      <ComboBox fx:id="cmbusuariosexo" layoutX="169" layoutY="210"
                prefWidth="190" prefHeight="26"
                styleClass="form-combobox">
         <tooltip>
            <Tooltip text="Selecciona el sexo del usuario." />
         </tooltip>
      </ComboBox>

      <!-- Teléfono -->
      <Label text="Telefono:" layoutX="71" layoutY="261"
             styleClass="form-label" />
      <TextField fx:id="txtusuariotelefono" layoutX="169" layoutY="262"
                 prefWidth="189" prefHeight="26"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce un teléfono válido." />
         </tooltip>
      </TextField>

      <!-- Fecha nacimiento -->
      <Label text="Fecha nacimiento:" layoutX="71" layoutY="317"
             styleClass="form-label" />
      <DatePicker fx:id="dateusuariosfechanac" layoutX="225" layoutY="318"
                  prefWidth="133" prefHeight="26"
                  styleClass="form-date">
         <tooltip>
            <Tooltip text="Selecciona la fecha de nacimiento del usuario." />
         </tooltip>
      </DatePicker>

      <!-- Foto -->
      <Label text="Foto" layoutX="71" layoutY="366"
             styleClass="form-label" />
      <Button fx:id="btnusuariofoto" layoutX="228" layoutY="356"
              prefWidth="66" prefHeight="73"
              onAction="#seleccionarFoto"
              styleClass="form-button-icon">
         <graphic>
            <ImageView fitWidth="61" fitHeight="60" preserveRatio="true">
               <image>
                  <Image url="@subirfoto.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="Subir archivo" />
         </tooltip>
      </Button>

      <!-- Botones -->
      <Button fx:id="btnusuariocancelar" text="Cancelar"
              layoutX="45" layoutY="443"
              prefWidth="76" prefHeight="39"
              onAction="#cancelarusuario"
              styleClass="form-button-cancel" />

      <Button fx:id="btnusuarioaceptar" text="Aceptar"
              layoutX="285" layoutY="443"
              prefWidth="76" prefHeight="39"
              onAction="#aceptarusuario"
              styleClass="form-button-accept" />

   </children>

</AnchorPane>
