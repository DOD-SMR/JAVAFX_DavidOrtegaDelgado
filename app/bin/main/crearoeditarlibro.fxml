<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="521.0" prefWidth="393.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.CrearEditarLibro"
            stylesheets="stylesformulario.css"
            styleClass="form-root">

   <children>

      <!-- ISBN -->
      <Label text="ISBN:" layoutX="37" layoutY="65"
             styleClass="form-label" />

      <TextField fx:id="txtlibrosisbn" layoutX="179" layoutY="65"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Debe contener un ISBN válido (sin espacios)." />
         </tooltip>
      </TextField>


      <!-- Titulo -->
      <Label text="Titulo:" layoutX="37" layoutY="104"
             styleClass="form-label" />

      <TextField fx:id="txtlibrostitulo" layoutX="179" layoutY="104"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce el título del libro. No puede quedar vacío." />
         </tooltip>
      </TextField>


      <!-- Autor -->
      <Label text="Autor:" layoutX="37" layoutY="146"
             styleClass="form-label" />

      <TextField fx:id="txtlibrosautor" layoutX="179" layoutY="146"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce el nombre del autor. No puede quedar vacío." />
         </tooltip>
      </TextField>


      <!-- Género -->
      <Label text="Genero:" layoutX="37" layoutY="187"
             styleClass="form-label" />

      <TextField fx:id="txtlibrosgenero" layoutX="180" layoutY="187"
                 styleClass="form-textfield">
         <tooltip>
            <Tooltip text="Introduce uno o varios géneros. Ejemplo: Fantasía, Terror, Drama..." />
         </tooltip>
      </TextField>


      <!-- Estado -->
      <Label text="Estado:" layoutX="37" layoutY="224"
             styleClass="form-label" />

      <ComboBox fx:id="cmblibrosestado" layoutX="180" layoutY="224"
                styleClass="form-combobox" />


      <!-- Número de páginas -->
      <Label text="Numero páginas:" layoutX="37" layoutY="270"
             styleClass="form-label" />

      <Spinner fx:id="spinnerlibrospaginas" layoutX="180" layoutY="271"
               styleClass="form-spinner">
         <tooltip>
            <Tooltip text="Introduce el número de páginas. Debe ser mayor a 1 e igual o inferior a 5000." />
         </tooltip>
      </Spinner>


      <!-- Imagen portada -->
      <Label text="Imagen portada:" layoutX="37" layoutY="324"
             styleClass="form-label" />

      <Button fx:id="btnlibrosportada" layoutX="180" layoutY="320"
              onAction="#seleccionarimagenportada"
              styleClass="form-button-icon">

         <graphic>
            <ImageView fitWidth="62" fitHeight="62" preserveRatio="true">
               <image>
                  <Image url="@subirfoto.png" />
               </image>
            </ImageView>
         </graphic>

         <tooltip>
            <Tooltip text="Selecciona una imagen JPEG o PNG como portada." />
         </tooltip>
      </Button>


      <!-- Botón cancelar -->
      <Button fx:id="btnlibroscancelar" text="Cancelar"
              layoutX="37" layoutY="436" prefWidth="62" prefHeight="40"
              onAction="#cancelarLibro"
              styleClass="form-button-cancel" />

      <!-- Botón aceptar -->
      <Button fx:id="btnlibrosaceptar" text="Aceptar"
              layoutX="302" layoutY="436" prefWidth="58" prefHeight="40"
              onAction="#aceptarLibro"
              styleClass="form-button-accept" />

   </children>

</AnchorPane>
